<h1 class="header center-align">Add a trip</h1>

<div class="row">
  <div class="col s12">
    <form action="/new" method="post">

      <label>Trip name</label>
      <input type="text" name="tripname" value="">

      <label>Start date</label>
      <input type="date" class="datepicker" name="start" value="">

      <label>End date</label>
      <input type="date" name="end" class="datepicker" value="">

      <label>Budget</label>
      <input type="number" name="budget" value="">

      <button class="waves-effect blue-grey darken-3 btn-large">Create!</button>

    </form>
  </div>

</div>



  <a class="change-inline waves-effect blue-grey darken-3 btn-large" href="/trips/<%= session[:user_id] %>">Back to trips</a>
