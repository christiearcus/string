<h1>Edit <%= @trip_edit.name %></h1>

<form action="/edit/<%= @trip_edit.id %>" method="post">
  <input type="hidden" value="put" name="_method">

  <label>Edit start date</label>
  <input type="text" name="start" value="<%= @trip_edit.trip_start %>">

  <label>Edit end date</label>
  <input type="text" name="end" value="<%= @trip_edit.trip_end %>">

  <label>Edit budget</label>
  <input type="text" name="budget" value="<%= @trip_edit.budget %>">

  <button>Edit</button>

</form>

<a href="/detail/<%= @trip_edit.id %>">Cancel</a>


<form action="/delete/<%= @trip_edit.id %>" method="post">

  <input type="hidden" value="delete" name="_method">
  <button>Delete trip</button>

</form>
