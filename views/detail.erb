<h1 class="header center-align"><%= @trip_object.name %></h1>
<p class="center-align"><%= @start %> - <%= @end %></p>


<div class="row">

  <div class="col s12">
    <h2 class="center-align">You have $<%= @daily_amount.to_i %> to spend today.</h2>

    <p class="sub-header"><span id="days-left"><%= @days_left.to_i %></span> days left in your <span id="duration"><%= @trip_length.to_i %></span> day trip</p>
    <div class="progress">
        <div id="day-burn" class="determinate" style="width: 100%"></div>
    </div>

    <p class="sub-header">$<span id="balance"><%= @balance %></span> left of your total $<span id="total-budget"><%= @total_budget %></span> budget </p>
    <div class="progress">
        <div id="budget-burn" class="determinate" style="width: 100%"></div>
    </div>
  </div>


  <div class="col s12">
    <form action="/detail/<%= @trip_object.id %>/newexpense" method="get">
      <button class="waves-effect blue-grey darken-3 btn-large">Add expense</button>
    </form>
  </div>

</div>

<form action="/edit/<%= @trip_object.id %>" method="get">
  <button class="waves-effect blue-grey darken-3 btn-large">Edit trip</button>
</form>

<div class="row right-align">
  <div class="col s12">
    <a class="black-text" href="/trips/<%=session[:user_id]%>">Back to trips</a>
  </div>
</div>
